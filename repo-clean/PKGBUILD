pkgname=repo-clean
pkgver=0.1.4
pkgrel=1
pkgdesc="Clean utility for Pacman repository"
arch=('i686' 'x86_64')
url="http://code.google.com/p/repo-clean/"
license=('GPL')
depends=('pacman' 'boost') 
makedepends=('cmake' 'gcc')
md5sums=('7ec184fa2c99584e31b4663cd6424903')

source=(http://konnektion.ath.cx/sources/core/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
        cd $srcdir/$pkgname-$pkgver
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make DESTDIR=$pkgdir install
}

